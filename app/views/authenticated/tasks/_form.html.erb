
<%= simple_form_for @task, method: :post do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :note %>
    <%= f.input :is_done %>
    <%= f.input :deadline_at %>
    <%= f.association :category, include_blank: false, label_method: lambda { |category| "#{category.title}" } %>
    <%= f.association :tags, as: :check_boxes, include_blank: false, label_method: lambda { |tag| "#{tag.title}" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<div class="task-show-page">
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Note:</strong>
  <%= @task.note %>
</p>

<p>
  <strong>Is done:</strong>
  <%= @task.is_done %>
</p>

<p>
  <strong>Deadline at:</strong>
  <%= @task.deadline_at %>
</p>

<p>
  <strong>User:</strong>
  <%= @task.user %>
</p>

<p>
  <strong>Category:</strong>
  <%= @task.category %>
</p>

<%= link_to 'Edit', edit_task_path(@task), :class => "btn btn-outline-dark" %> |
<%= link_to 'Back', tasks_path, :class => "btn btn-outline-dark" %>
</div>
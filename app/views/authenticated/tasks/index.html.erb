<div class="task-index-page">
<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<h6><%= link_to 'Home', root_path, :class => "btn btn-outline-dark" %></h6>
<h6><%= link_to 'New Task', new_task_path, :class => "btn btn-outline-dark" %></h6>
<table>
  <thead>
    <tr>
<!--      <th>Title</th>
      <th>Note</th>
      <th>Is done</th>
      <th>Deadline at</th>
      <th>User</th>
      <th>Category</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.note %></td>
        <td><%= task.is_done %></td>
        <td><%= task.deadline_at %></td>
<!--        <td><%#= task.user %></td>-->
        <td><%= task.category %></td>
        <div class="btn-group btn-group-xs">
        <td><%= link_to 'Show', task, :class => "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), :class => "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-dark btn-sm" %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<p id="notice"><%= notice %></p>
<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
<h1>Tasks</h1>
<h6><%= link_to 'Categories', settings_categories_path %></h6>
<h6><%= link_to 'Tags', settings_tags_path %></h6>
<h6><%= link_to 'Home', root_path %></h6>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Note</th>
      <th>Is done</th>
      <th>Deadline at</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.note %></td>
        <td><%= task.is_done %></td>
        <td><%= task.deadline_at %></td>
        <td><%= task.user %></td>
        <td><%= task.category %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>

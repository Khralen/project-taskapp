<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.color %></td>
        <td><%= link_to 'Show', [:settings, category ] %></td>
        <td><%= link_to 'Edit', edit_settings_category_path(category) %></td>
        <td><%= link_to 'Destroy', [:settings, category ], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Category', new_settings_category_path %>

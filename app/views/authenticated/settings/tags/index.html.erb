<div class="tag-index-page">
<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.title %></td>
        <td><%= tag.color %></td>
        <td><%= link_to 'Show', [:settings, tag], :class => "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Edit', edit_settings_tag_path(tag), :class => "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Destroy', [:settings, tag], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-dark btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h6><%= link_to 'New Tag', new_settings_tag_path, :class => "btn btn-outline-dark" %></h6>
<h6><%= link_to 'Home', root_path, :class => "btn btn-outline-dark" %></h6>
</div>